@{
}

<h1>Register</h1>

<h4>Register</h4>
<hr />


<div class="row">
    <div class="col-md-4">
      <form class="m-t" role="form" asp-action="Register">
            <div class="form-group">
                <input type="text" class="form-control" asp-for="@Model.Name" placeholder="Name" />
            </div>
            <div class="form-group">
                <input type="text" class="form-control" asp-for="@Model.Surname" placeholder="Surname" />
            </div>
            <div class="form-group">
                <input type="text" class="form-control" asp-for="@Model.Email" placeholder="Email" />
            </div>
            <div class="form-group">
                <input type="text" class="form-control" asp-for="@Model.Username" placeholder="Userame" />
            </div>
            <div class="form-group"> 
                <input type="password" class="form-control" asp-for="@Model.Password" placeholder="Password" />
            </div>
    
            <br />
            <div class="form-group">
                <input type="submit" value="Register" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Login">Go to Login</a>
</div>