@{
}

<h1>Login</h1>

<h4>Login</h4>
<hr />


<div class="row">
    <div class="col-md-4">
        <form class="m-t" role="form" asp-action="Login">
            <div class="form-group">
                <input type="text" class="form-control" asp-for="@Model.Username" placeholder="Username" />
            
            <div class="form-group">
                <input type="password" class="form-control" asp-for="@Model.Password" placeholder="Password" />
            

            <br />
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Register">Create Account.</a>
</div>
